{
  "manifest_version": 3,
  "name": "Slack Pixel Art",
  "version": "1.0.0",
  "description": "Create pixel art from Slack emojis",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://*.slack.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/customize/emoji*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
